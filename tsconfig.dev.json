{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "jsx": "react",
    "target": "ES2020",
    "resolveJsonModule": true,
  },
  "include": [
    "packages/@roots/bud/types",
    "packages/@roots/bud-framework/types",
    "packages/@roots/bud-babel/types",
    "packages/@roots/bud-postcss/types"
  ],
  "exclude": ["node_modules"],
}
