{
  "name": "bud-monorepo",
  "private": true,
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "engines": {
    "node": "14.9.0"
  },
  "workspaces": {
    "packages": [
      "packages/bud",
      "packages/bud-api",
      "packages/bud-build",
      "packages/bud-cache",
      "packages/bud-cli",
      "packages/bud-compiler",
      "packages/bud-extensions",
      "packages/bud-framework",
      "packages/bud-hooks",
      "packages/bud-service",
      "packages/bud-server",
      "packages/bud-support",
      "packages/container",
      "packages/dependencies",
      "packages/extension-babel",
      "packages/extension-entrypoints",
      "packages/extension-eslint",
      "packages/extension-imagemin",
      "packages/extension-library",
      "packages/extension-postcss",
      "packages/extension-prettier",
      "packages/extension-purgecss",
      "packages/extension-react",
      "packages/extension-sass",
      "packages/extension-stylelint",
      "packages/extension-tailwindcss",
      "packages/extension-terser",
      "packages/extension-typescript",
      "packages/extension-vue",
      "packages/extension-wordpress-dependencies",
      "packages/extension-wordpress-externals",
      "packages/extension-wordpress-manifests",
      "packages/filesystem",
      "packages/ink-prettier",
      "packages/ink-use-style",
      "packages/sage",
      "packages/typings",
      "packages/webpack-entrypoints-plugin",
      "packages/webpack-merged-manifest-plugin",
      "packages/webpack-wordpress-dependencies-plugin",
      "packages/webpack-wordpress-externals-plugin"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "watch": "node ./scripts/watch",
    "make": "lerna exec -- rm -rf node_modules tsconfig.tsbuildinfo lib types && rm -rf node_modules && yarn install --force --no-cache && yarn build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'packages/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'packages/**/src/**/*'  --write",
    "lint:docs": "prettier 'docs/*' --write",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -u",
    "release:next": "lerna publish prerelease --ignore-scripts --dist-tag next --no-push",
    "release:latest": "lerna publish --ignore-scripts",
    "test": "jest --verbose"
  },
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/autoprefixer": "^9.7.2",
    "@types/copy-webpack-plugin": "^6.4.0",
    "@types/express": "^4.17.9",
    "@types/fs-extra": "^9.0.1",
    "@types/globby": "^9.1.0",
    "@types/imagemin": "^7.0.0",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.14.16",
    "@types/node-notifier": "^8.0.0",
    "@types/pino": "^6.3.4",
    "@types/react": "^17.0.0",
    "@types/shell-quote": "^1.7.0",
    "@types/webpack-hot-middleware": "^2.25.3",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fb-watchman": "^2.0.1",
    "husky": "^4.3.0",
    "ink-testing-library": "^2.0.1",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "run-s": "^0.0.0",
    "semantic-release": "^17.3.1",
    "typescript": "^4.1.3",
    "webpack-hot-middleware": "^2.25.0"
  },
  "dependencies": {
    "@roots/bud": "2.2.1",
    "type-fest": "^0.20.2"
  }
}
