{
  "name": "@roots/sage",
  "version": "3.0.23-alpha.0",
  "description": "Sage starter theme build tooling",
  "repository": {
    "type": "git",
    "url": "git://github.com/roots/bud.git",
    "directory": "packages/sage"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "keywords": [
    "bud",
    "sage"
  ],
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "files": [
    "lib/",
    "types/",
    "src/",
    "bin/"
  ],
  "bin": {
    "sage": "bin/sage.js"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "run-s build:*",
    "build:cjs": "tsc --build tsconfig.json",
    "build:esm": "tsc --build tsconfig-esm.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "clean:types": "rimraf ./types",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write"
  },
  "peerDependencies": {
    "@roots/bud": "*",
    "@roots/bud-babel": "*",
    "@roots/bud-entrypoints": "*",
    "@roots/bud-eslint": "*",
    "@roots/bud-imagemin": "*",
    "@roots/bud-postcss": "*",
    "@roots/bud-prettier": "*",
    "@roots/bud-purgecss": "*",
    "@roots/bud-react": "*",
    "@roots/bud-sass": "*",
    "@roots/bud-stylelint": "*",
    "@roots/bud-tailwindcss": "*",
    "@roots/bud-terser": "*",
    "@roots/bud-wordpress-dependencies": "*",
    "@roots/bud-wordpress-externals": "*",
    "@roots/bud-wordpress-manifests": "*"
  },
  "dependencies": {
    "@roots/bud": "^3.0.23-alpha.0",
    "@roots/bud-babel": "^3.0.23-alpha.0",
    "@roots/bud-entrypoints": "^3.0.23-alpha.0",
    "@roots/bud-eslint": "^3.0.23-alpha.0",
    "@roots/bud-imagemin": "^3.0.23-alpha.0",
    "@roots/bud-postcss": "^3.0.23-alpha.0",
    "@roots/bud-prettier": "^3.0.23-alpha.0",
    "@roots/bud-purgecss": "^3.0.23-alpha.0",
    "@roots/bud-react": "^3.0.23-alpha.0",
    "@roots/bud-sass": "^3.0.23-alpha.0",
    "@roots/bud-stylelint": "^3.0.23-alpha.0",
    "@roots/bud-tailwindcss": "^3.0.23-alpha.0",
    "@roots/bud-terser": "^3.0.23-alpha.0",
    "@roots/bud-wordpress-dependencies": "^3.0.23-alpha.0",
    "@roots/bud-wordpress-externals": "^3.0.23-alpha.0",
    "@roots/bud-wordpress-manifests": "^3.0.23-alpha.0",
    "cross-env": "^7.0.2",
    "get-bin-path": "^5.1.0",
    "npm-run-all": "^4.1",
    "purgecss-with-wordpress": "^4.0.0",
    "rimraf": "^3.0.2"
  },
