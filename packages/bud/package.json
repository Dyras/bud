{
  "name": "@roots/bud",
  "version": "3.0.37-alpha.0",
  "description": "A friendly build tool to help manage your project assets.",
  "homepage": "https://roots.io/bud",
  "repository": {
    "type": "git",
    "url": "https://github.com/roots/bud.git",
    "directory": "packages/bud"
  },
  "bugs": {
    "url": "https://github.com/roots/bud/issues"
  },
  "funding": {
    "type": "github sponsors",
    "url": "https://github.com/sponsors/roots"
  },
  "license": "MIT",
  "contributors": [
    "Kelly Mears <kelly@roots.io> (https://kellymears.me)"
  ],
  "keywords": [
    "webpack"
  ],
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/",
    "src/",
    "bin/"
  ],
  "bin": {
    "bud": "bin/bud.js"
  },
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    "require": "./lib/cjs/index.js",
    "import": "./lib/esm/index.js"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:cjs": "tsc --build tsconfig.json",
    "build:esm": "tsc --build tsconfig-esm.json",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint:prettier": "prettier 'src/**/*'  --write",
    "clean": "run-s clean:*",
    "clean:lib": "rimraf ./lib",
    "clean:modules": "rimraf ./node_modules",
    "clean:types": "rimraf ./types",
    "pkg": "run-s pkg:*",
    "pkg:check": "package-check --verbose",
    "pkg:format": "prettier './lib/**/*.{js,ts}' --write"
  },
  "devDependencies": {
    "@roots/bud-typings": "^3.0.37-alpha.0"
  },
  "dependencies": {
    "@roots/bud-api": "^3.0.37-alpha.0",
    "@roots/bud-build": "^3.0.37-alpha.0",
    "@roots/bud-cache": "^3.0.37-alpha.0",
    "@roots/bud-cli": "^3.0.37-alpha.0",
    "@roots/bud-compiler": "^3.0.37-alpha.0",
    "@roots/bud-extensions": "^3.0.37-alpha.0",
    "@roots/bud-framework": "^3.0.37-alpha.0",
    "@roots/bud-hooks": "^3.0.37-alpha.0",
    "@roots/bud-server": "^3.0.37-alpha.0",
    "@roots/bud-support": "^3.0.37-alpha.0",
    "@roots/container": "^3.0.37-alpha.0",
    "@roots/filesystem": "^3.0.37-alpha.0",
    "mini-css-extract-plugin": "^0.11.3",
    "mini-svg-data-uri": "^1.2.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "raw-loader": "^4.0.1",
    "resolve-url-loader": "^3.1.1",
    "source-map-loader": "^1.0.1",
    "style-loader": "^2.0.0",
    "thread-loader": "^3.0.1",
    "url-loader": "^4.1.0",
    "webpack-config-dump-plugin": "^3.0.1",
    "webpack-manifest-plugin": "^2.2.0",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "gitHead": "c1939ef43f4911df95621a55ef0d569f121ae61f"
}
